# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,css,scss,html,json,yml,yaml,md}]
indent_style = space
indent_size = 2

[*.{go,mod,sum}]
indent_style = tab
indent_size = 4

[*.{dart}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab